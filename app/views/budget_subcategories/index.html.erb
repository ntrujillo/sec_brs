<p id="notice"><%= notice %></p>

<h1>Budget Subcategories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Budgeted</th>
      <th>Spent</th>
      <th>Pending</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_subcategories.each do |budget_subcategory| %>
      <tr>
        <td><%= budget_subcategory.name %></td>
        <td><%= budget_subcategory.budgeted %></td>
        <td><%= budget_subcategory.spent %></td>
        <td><%= budget_subcategory.pending %></td>
        <td><%= budget_subcategory.balance %></td>
        <td><%= link_to 'Show', budget_subcategory %></td>
        <td><%= link_to 'Edit', edit_budget_subcategory_path(budget_subcategory) %></td>
        <td><%= link_to 'Destroy', budget_subcategory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Budget Subcategory', new_budget_subcategory_path %>

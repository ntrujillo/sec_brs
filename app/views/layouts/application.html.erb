<!DOCTYPE html>
<html>
  <head>
    <title>SecBrs</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Latest compiled and minified JavaScript --> 
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
      <%= link_to 'SEC-BRS', root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item <%= root_url %>">
            <%= link_to 'Home', root_url, class: 'nav-link' %>
          </li>
          <li class="nav-item <%= root_url %>">
            <%= link_to 'Documents', root_url, class: 'nav-link' %>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item <%= budget_subcategories_path(User.find(session[:user_id]).committee_id) %>">
              <%= link_to 'Budgets', budget_subcategories_path(User.find(session[:user_id]).committee_id), class: 'nav-link' %>
            </li>
            <li class="nav-item <%= users_path %>">
              <%= link_to 'Sub Accounts', users_path, class: 'nav-link' %>
            </li>
            <li class="nav-item <%= vendors_path(session[:user_id]) %>">
              <%= link_to 'Vendors', vendors_path(session[:user_id]), class: 'nav-link' %>
            </li>
            <li class="nav-item <%= financial_forms_path %>">
              <%= link_to 'Financial Forms', financial_forms_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item <%= root_url %>">
              <%= link_to "Hi, #{current_user.email}", root_url, class: 'nav-link' %>
            </li>
            <li class="nav-item <%= root_url %>">
              <%= link_to 'Log Out', logout_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
          <% end %>
        </ul>
      </div>
    </nav>

    <% flash.each do |key, message| %>
      <div class="alert <%= flash_class(key) %> alert-dismissible fade show text-center" role="alert">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-8">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>

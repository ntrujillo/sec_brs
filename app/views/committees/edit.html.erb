<h1>Editing Committee</h1>

<%= render 'form', committee: @committee %>

  <table>
    <thead>
      <tr>
        <th>Member(s)</th>
        <th>UIN</th>
        <th>Phone Number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %> <%= user.last_name %></td>
          <td><%= user.uin %></td>
          <td><%= user.phone_number%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= link_to 'Show', @committee %> |
<%= link_to 'Back', committees_path %>



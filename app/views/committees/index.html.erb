<p id="notice"><%= notice %></p>

<h1>Committees</h1>

<table>
  <thead>
    <tr>
      <th>Committee name</th>
      <th>Budget</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.committee_name %></td>
        <td><%= committee.budget %></td>
        <td><%= committee.user_id %></td>
        <td><%= link_to 'Show', committee %></td>
        <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
        <td><%= link_to 'Destroy', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


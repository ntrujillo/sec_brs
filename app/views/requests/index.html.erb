<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Budget</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Tax category</th>
      <th>Gift</th>
      <th>Cost</th>
      <th>Items purchased</th>
      <th>Type</th>
      <th>Vendor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.user_id %></td>
        <td><%= request.budget_id %></td>
        <td><%= request.category %></td>
        <td><%= request.subcategory %></td>
        <td><%= request.tax_category %></td>
        <td><%= request.gift %></td>
        <td><%= request.cost %></td>
        <td><%= request.items_purchased %></td>
        <td><%= request.type %></td>
        <td><%= request.vendor_id %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>

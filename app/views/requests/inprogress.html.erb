<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Budget</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Tax category</th>
      <th>Gift</th>
      <th>Cost</th>
      <th>Items purchased</th>
      <th>Type</th>
      <th>Vendor</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests = @requests.where("status = 'In Progress'") %>
    <% @requests.each do |request|%>
      <tr>
        <td><%= User.where(id: request.user_id).last.first_name %></td>
        <td><%= BudgetSubcategory.where(id: request.budget_id).last.subcategory_name %></td>
        <td><%= request.category %></td>
        <td><%= request.subcategory %></td>
        <td><%= request.tax_category %></td>
        <td><%= request.gift %></td>
        <td><%= request.cost %></td>
        <td><%= request.items_purchased %></td>
        <td><%= request.item %></td>
        <td><%= Vendor.where(id: request.vendor_id).last.vendor_name %></td>
        <td><%= request.status %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'View file', request.file %></td>
        <td><%= link_to 'Download file', request.file, download: '' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
<%= link_to 'Back', requests_path(session[:user_id]) %>
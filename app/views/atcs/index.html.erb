<p id="notice"><%= notice %></p>

<h1>Approval To Charge Requests</h1>

<% if User.find(session[:user_id]).permission_type == 'admin' %>
  <%= link_to 'Completed Approval To Charge Requests', atc_approved_path %>
  <%= link_to 'Pending Approval To Charge Requests', atc_inprogress_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Request Submitted By</th>
      <th>Vendor</th>
      <th>Contact name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Purchase info</th>
      <th>Amount</th>
      <th>Status</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atcs.each do |atc| %>
      <tr>
        <td><%= User.find_by(id: atc.user_id).first_name %></td>
        <td><%= Vendor.where(id: atc.vendor_id).last.vendor_name%></td>
        <td><%= atc.contact_name %></td>
        <td><%= atc.phone %></td>
        <td><%= atc.email %></td>
        <td><%= atc.purchase_info %></td>
        <td><%= atc.amount %></td>
        <td><%= atc.status %></td>
        <td><%= atc.notes %></td>
        <td><%= link_to 'Show', atc %></td>
        <td><%= link_to 'Edit', edit_atc_path(atc) %></td>
        <td><%= button_to 'Destroy', atc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'View file', atc.file %></td>
        <td><%= link_to 'Download file', atc.file, download: '' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Atc', new_atc_path %>
<%= link_to 'Back', financial_forms_path %>
<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Items purchased</th>
      <th>Budget</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Taxcategory</th>
      <th>Gift</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.items_purchased %></td>
        <td><%= item.budget %></td>
        <td><%= item.category %></td>
        <td><%= item.subcategory %></td>
        <td><%= item.taxcategory %></td>
        <td><%= item.gift %></td>
        <td><%= item.cost %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


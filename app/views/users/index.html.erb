<p id="notice"><%= notice %></p>
<%# only admins can view all users in the database %>
<h1>Users</h1> 

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Uin</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Committee</th>
      <th>Permission type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.street_address %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.zip_code %></td>
        <td><%= user.uin %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.committee.committee_name %></td>
        <td><%= user.permission_type %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', admin_home_path(@user)%>


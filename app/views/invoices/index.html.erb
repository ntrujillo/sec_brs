<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <tbody>
    <% @invoices.each do |invoice|%>
      <tr>
        <td><%= invoice.vendor_title %></td>
        <td><%= invoice.vendor_taxid %></td>
        <td><%= invoice.vendor_address %></td>
        <td><%= invoice.vendor_city %></td>
        <td><%= invoice.vendor_state %></td>
        <td><%= invoice.vendor_zip %></td>
        <td><%= invoice.vendor_paymentmethod %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  
</table>

<br>

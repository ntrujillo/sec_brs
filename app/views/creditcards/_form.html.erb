    <%= form.label :vendor_id %>
    <%= form.select :vendor_id, Vendor.order(:vendor_name).map { |vendor| [vendor.vendor_name, vendor.id] }, include_blank: true, id: "id_of_the_vendor_select_box" %>
  </div>

  <div class="field">
    <%= form.label :payment_link %>
    <%= form.text_field :payment_link %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :Confirmation_order %>
    <%= form.text_field :Confirmation_order %>
  </div>

  <div class="field">
    <%= form.label :reservation_name %>
    <%= form.text_field :reservation_name %>
  </div>

  <div class="field">
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <div class="field">
    <%= form.label :notes %>
